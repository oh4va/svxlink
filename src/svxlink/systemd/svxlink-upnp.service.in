[Unit]
Description=Setup UPNP NAT for SvxLink
After=network.target

[Service]
Type=oneshot
ExecStartPre=/bin/bash -c "/bin/systemctl set-environment ip_addr=$(/bin/hostname -I | cut -d' ' -f1)"
ExecStart=/usr/bin/upnpc -a ${ip_addr} 5198 5198 udp
ExecStart=/usr/bin/upnpc -a ${ip_addr} 5199 5199 udp
RemainAfterExit=true
ExecStop=/usr/bin/upnpc -d ${ip_addr} 5198 5198 udp
ExecStop=/usr/bin/upnpc -d ${ip_addr} 5199 5199 udp
StandardOutput=journal

[Install]
WantedBy=multi-user.target
